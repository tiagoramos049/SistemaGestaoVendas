<div id="mensagem"></div>

<form asp-action="Index">
    <div class="container">
        <div class="row">
            <span>Cadastrar Novo Cliente</span>
            <hr />
            <div class="col-md-3">
                <div class="form-group">
                    <label for="Nome">Nome</label>
                    <input type="text" class="form-control" name="Nome" placeholder="Nome">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="Descricao">Cpf_Cnpj</label>
                    <input type="text" class="form-control" name="Cpf_Cnpj" placeholder="Cpf_Cnpj">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="Preco_Unitario">Email</label>
                    <input type="text" class="form-control" name="email" placeholder="email">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="Preco_Unitario">Senha</label>
                    <input type="text" class="form-control" name="senha" placeholder="senha">
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </div>
    </div>
</form>

<br />

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table id="jqGridCliente"></table>
            <div id="jqGridPager"></div>
        </div>
    </div>
</div>

@section clienterender {
    <script src="~/js/cliente.js"></script>
}